{
  "manifest_version": 2,
  "name": "PERMA Police",
  "short_name": "PERMAPolice",
  "version": "0.7",
  "description": "Block pages or redact elements based on wellbeing rating.",
  "author": "Peter Hughes",
  "homepage_url": "http://phugh.es/",
  "minimum_chrome_version": "49",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["content/css/style.css"],
      "js": [
        "content/js/lex.js",
        "content/js/compiled.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "img/16.png",
      "24": "img/24.png",
      "32": "img/32.png",
      "48": "img/48.png",
      "64": "img/64.png",
      "128": "img/128.png",
      "256": "img/256.png",
      "512": "img/512.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "PERMA Police Info"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": false
  },
  "icons": {
    "16": "img/16.png",
    "24": "img/24.png",
    "32": "img/32.png",
    "48": "img/48.png",
    "64": "img/64.png",
    "128": "img/128.png",
    "256": "img/256.png",
    "512": "img/512.png"
  }
}